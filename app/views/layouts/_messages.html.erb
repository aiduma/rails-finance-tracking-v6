<div>
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
  <% end %> 
</div>